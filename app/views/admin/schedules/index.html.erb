<!DOCTYPE html>
<html>
  <div class="top">
    <h1>Schedules</h1>
  </div>
  <% @schedules.each do |schedule| %>
    <div class="actions">
      <h2>
        <%= schedule.movie.id %>・<%= schedule.movie.name %>
      </h2>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>映画ID</th>
            <th>開始時間</th>
            <th>終了時間</th>
            <th>作成日時</th>
            <th>更新日時</th>
          </tr>
        </thead>
        <thead>
          <tr>
            <td>
              <%= link_to schedule.id, admin_schedule_path(schedule) %>
            </td>
            <td>
              <%= link_to schedule.movie_id, admin_movie_path(schedule.movie_id) %>
            </td>
            <td>
              <%= schedule.start_time %>
            </td>
            <td>
              <%= schedule.end_time %>
            </td>
            <td>
              <%= schedule.created_at %>
            </td>
            <td>
              <%= schedule.updated_at %>
            </td>
            <td>
              <%= link_to '削除' , admin_schedule_path(schedule), method: :delete, data: { confirm: '削除してもよろしいですか?' } %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
  <% end %>
</html>
