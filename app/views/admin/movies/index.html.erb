<!DOCTYPE html>
<html>
  <div class="top">
    <h1>Movies</h1>
  </div>
  <div>
    <% if flash.any? %>
      <div class="error-alert">
        <ul>
          <% flash.each do |name, message| %>
            <li class="error-message text-danger">
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <% @movies.each do |movie| %>
    <div class="actions">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>映画タイトル</th>
            <th>公開年</th>
            <th>上映中か</th>
            <th>概要</th>
            <th>画像URL</th>
            <th>作成日時</th>
            <th>更新日時</th>
            <th>上映スケジュール</th>
          </tr>
        </thead>
        <thead>
          <tr>
            <td>
              <%= link_to movie.id, edit_admin_movie_path(movie) %>
            </td>
            <td>
              <%= link_to movie.name, admin_movie_path(movie) %>
            </td>
            <td>
              <%= movie.year %>
            </td>
            <td>
              <%= movie.description %>
            </td>
            <td>
              <%= image_tag movie.image_url %>
            </td>
            <td>
              <% if movie.is_showing %>
                上映中
              <% else %>
                上映予定
              <% end %>
            </td>
            <td>
              <%= movie.created_at %>
            </td>
            <td>
              <%= movie.updated_at %>
            </td>
            <td>
              <% movie.schedules.each do |schedule| %>
                <p>上映開始：<%= schedule.start_time %></p>
                <p>上映終了：<%= schedule.start_time %></p>
                <p>上映終了：<%= schedule.start_time %></p>
              <% end %>
            </td>
            <td>
              <%= link_to '削除' , admin_movie_path(movie), method: :delete, data: { confirm: '削除してもよろしいですか?' } %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
  <% end %>
</html>
