<!DOCTYPE html>
<html>
    
<head>
    <title>予約ページ詳細</title>
</head>
<h1>予約ページ詳細</h1>
<div>
    <% if @reservation.errors.any? %>
        <div class="error-alert">
            <ul>
                <% @reservation.errors.full_messages.each do |message| %>
                    <li class="error-message text-danger">
                        <%= message %>
                    </li>
                    <% end %>
            </ul>
        </div>
        <% end %>
            <%= form_with model: [:admin, @reservation], local: true do |f| %>
                <div class="field mb-1">
                    <%= f.label :映画id %><span class="badge badge-danger ml-1"></span>
                    <%= f.text_field :movie_id, class:"form-control"%>
                </div>
                <div class="field mb-1">
                    <%= f.label :日時 %><span class="badge badge-danger ml-1"></span>
                        <%= f.text_field :date, class:"form-control"%>
                </div>
                <div class="field mb-1">
                    <%= f.label :座席 %><span class="badge badge-danger ml-1"></span>
                        <%= f.text_field :sheet_id, class:"form-control" %>
                </div>
                <div class="field mb-1">
                    <%= f.label :スケジュールID %><span class="badge badge-danger ml-1"></span>
                        <%= f.text_field :schedule_id, class:"form-control" %>
                </div>
                <div class="field mb-1">
                    <%= f.label :氏名 %><span class="badge badge-danger ml-1"></span>
                        <%= f.text_field :name, class:"form-control",placeholder:"入力してください" %>
                </div>
                <div class="field mb-1">
                    <%= f.label :メールアドレス %><span class="badge badge-danger ml-1"></span>
                        <%= f.text_field :email, class:"form-control",placeholder:"入力してください" %>
                </div>
                <%= f.submit "変更する" %>
                    <% end %>

                <%= button_to "予約をキャンセルする", {controller: "admin/reservations", action: "destroy"}, {method: :delete, params:{id: @reservation.id}} %>
            </div>

</html>