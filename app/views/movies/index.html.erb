<!DOCTYPE html>
<html>
  <head>
    <title>映画一覧</title>
  </head>
  <div>
    <% if flash.any? %>
      <div class="error-alert">
        <ul>
          <% flash.each do |name, message| %>
            <li class="error-message text-danger">
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="serch_form">
    <%= form_with url: movies_path,method: :get, local: true do |f| %>
      <%= f.text_field :keyword %>
      <%= f.radio_button :is_showing, :"" %>
      <%= f.label :is_showing, "全て" %>
      <%= f.radio_button :is_showing, :"1" %>
      <%= f.label :is_showing, "上映中" %>
      <%= f.radio_button :is_showing, :"0" %>
      <%= f.label :is_showing, "公開予定" %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
  <% @movies.each do |movie| %>
    <div class="actions">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>映画タイトル</th>
            <th>公開年</th>
            <th>上映中か</th>
            <th>概要</th>
            <th>画像URL</th>
            <th>作成日時</th>
            <th>更新日時</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to movie.id, movie_path(movie) %>
            </td>
            <td>
              <%= movie.name %>
            </td>
            <td>
              <%= movie.year %>
            </td>
            <td>
              <%= movie.description %>
            </td>
            <td>
              <%= image_tag movie.image_url %>
            </td>
            <td>
              <% if movie.is_showing==true %>
                上映中
              <% else %>
                上映予定
              <% end %>
            </td>
            <td>
              <%= movie.created_at %>
            </td>
            <td>
              <%= movie.updated_at %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</html>
