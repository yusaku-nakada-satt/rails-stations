<!DOCTYPE html>
<head>
	<title>座席一覧</title>
  <%= stylesheet_link_tag 'sheets' %>
</head>
<html>
  <div>
    <% if flash.any? %>
      <div class="error-alert">
        <ul>
          <% flash.each do |name, message| %>
            <li class="error-message text-danger">
              <%= message %>
            </li>
            <% end %>
        </ul>
      </div>
      <% end %>
  </div>
  <div class="screen">
    スクリーン　1
  </div>
  <div class = "clients">
    <table>
      <% @sheets_group.each do |row, sheets| %>
        <tr>
          <% sheets.each do |sheet| %>
            <td>
              <%= link_to "#{sheet.row}-#{sheet.column}", new_movie_schedule_reservation_path(movie_id: params[:movie_id], schedule_id: params[:schedule_id], date: params[:date], sheet_id: sheet.id) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</html>