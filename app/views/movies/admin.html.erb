<!DOCTYPE html>
<html>
<div class="top">
	<h1>映画一覧</h1>
</div>
<% @movies.each do |movie| %>
	<div class="actions">
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>映画タイトル</th>
					<th>公開年</th>
					<th>上映中か</th>
					<th>概要</th>
					<th>画像URL</th>
					<th>作成日時</th>
					<th>更新日時</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						<%= movie.id %>
					</td>
					<td>
						<%= movie.name %>
					</td>
					<td>
						<%= movie.year %>
					</td>
					<td>
						<%= movie.description %>
					</td>
					<td>
						<%= movie.image_url %>
					</td>
					<td>
						<% if movie.is_showing==true %>
							上映中
							<% else %>
								上映予定
								<% end %>
					</td>
					<td>
						<%= movie.created_at %>
					</td>
					<td>
						<%= movie.updated_at %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<% end %>

</html>